#!/usr/bin/env ruby

require 'json'

prefix = ARGV.shift

FILES = {}

REGEXP = /^IMG_(.{4}).*\.(.{3})$/

files = Dir.glob("*noaudio*.mov") + Dir.glob("*txt") + Dir.glob("*jpg")

while fname = files.shift
  match = REGEXP.match(fname)
  raise fname unless match

  id = Integer(match[1])
  extension = match[2]
  src = prefix + fname

  obj = (FILES[id] ||= {
           id: id,
           imgSrc: nil,
           videoSrcs: [],
           commentText: "",
         })
  if extension == "mov"
    if fname =~ /264/
      codec = "avc1.4d4028"
    else
      codec = "hevc"
    end

    obj[:videoSrcs] << {
      src: src,
      codec: codec
    }
  elsif extension == "jpg"
    obj[:imgSrc] = src
  elsif extension == "txt"
    obj[:commentText] = File.read(fname)
  else
    raise fname
  end
end

values = FILES.values

values.sort_by! do |value|
  value[:id]
end

puts JSON.pretty_generate(values)
